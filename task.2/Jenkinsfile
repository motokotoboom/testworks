pipeline{
    agent any

    stages {
        stage('Get source') {
            steps {
                echo 'getting source'
                checkout scm
            }
        }
        stage('running php-apache'){
            steps{
                echo 'run php-apache docker image'           
                sh '''
                pwd;echo $JOB_NAME;ls /var;
                cp -f /var/jenkins_home/workspace/$JOB_NAME/task.2/index.php /var/www/html/;
                '''
                sh '''
                HOST=`ip address show eth0 | sed -nr 's/.*inet ([^\\/]+).*/\\1/p'`
                echo $HOST
                echo \$HOST
                echo ${HOST}
                if [ \"`docker service ls --filter=\"name=task-2-apache\" | wc -l`\" != \"2\" ]; then 
		            docker service create --replicas=2 -p 80:80 --name task-2-apache --mount 'type=volume,volume-driver=local,dst=/var/www/html,volume-opt=type=nfs,volume-opt=device=:/var/www/html/,volume-opt=o=addr=${HOST},volume-nocopy=true' php:7.0-apache 
                fi
                '''
            }
        }

    }
}

